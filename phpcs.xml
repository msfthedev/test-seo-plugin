<?xml version="1.0"?>
<ruleset name="TestSeoPlugin">
    <description>TestSeoPlugin WordPress Coding Standards</description>

    <!-- Use the WordPress coding standard -->
    <rule ref="WordPress"/>
	<rule ref="WordPress.NamingConventions.PrefixAllGlobals">
        <properties>
            <property name="prefixes" type="array">
                <element value="MsfTheDev"/>
            </property>
        </properties>
    </rule>
	
    <!-- Exclude some directories from checking -->
    <exclude-pattern>vendor/*</exclude-pattern>
    <exclude-pattern>build/*</exclude-pattern>

    <!-- Set the file extensions to check -->
    <file>*.php</file>
	
</ruleset>